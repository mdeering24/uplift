@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="border backgroundWhite p-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Create New</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
                <th>Order Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}
